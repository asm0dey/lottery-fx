<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane style="-fx-background-color: #1D223B;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.cat.DataController">
    <children>
        <Button fx:id="startButton" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#startLottery" style="-fx-background-color: #5BD5EF;" text="Start raffle!" textFill="WHITE" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <font>
                <Font name="Verdana" size="13.0" />
            </font>
        </Button>
        <CheckBox fx:id="checkBox" mnemonicParsing="false" prefHeight="24.0" prefWidth="462.0" text="Mask emails" textFill="WHITE" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0">
            <font>
                <Font name="Verdana" size="13.0" />
            </font>
        </CheckBox>
        <Label layoutX="1.0" prefHeight="50.0" text="Put participants here:" textFill="WHITE" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="0.0">
            <font>
                <Font name="Verdana" size="24.0" />
            </font>
        </Label>
        <Button fx:id="fullScreenButton" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#goFullScreen" style="-fx-background-color: #D5D8DD;" text="Full Screen" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <font>
                <Font name="Verdana" size="13.0" />
            </font>
        </Button>
        <TextArea fx:id="text" layoutX="1.0" layoutY="60.0" prefHeight="192.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="50.0">
            <font>
                <Font name="Verdana" size="13.0" />
            </font>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </TextArea>
    </children>
</AnchorPane>
