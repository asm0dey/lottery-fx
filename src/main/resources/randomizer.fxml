<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="dev.cat.LotteryController">
    <bottom>
        <ButtonBar prefHeight="74.0" prefWidth="600.0" style="-fx-background-color: #1D223B;"
                   BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="presentButton" mnemonicParsing="false" onAction="#congratulate"
                        style="-fx-background-color: #85D888;" text="Present" textFill="WHITE">
                    <font>
                        <Font name="Verdana" size="13.0"/>
                    </font>
                </Button>
                <Button fx:id="repeatButton" mnemonicParsing="false" onAction="#removeCandidateAndRepeat"
                        style="-fx-background-color: #C961B3;" text="Start again" textFill="WHITE">
                    <font>
                        <Font name="Verdana" size="13.0"/>
                    </font>
                </Button>
            </buttons>
            <padding>
                <Insets right="10.0"/>
            </padding>
        </ButtonBar>
    </bottom>
    <center>
        <Label fx:id="dataLabel" alignment="CENTER" prefHeight="87.0" prefWidth="451.0" text="Label"
               textAlignment="CENTER" BorderPane.alignment="CENTER">
            <font>
                <Font name="Verdana" size="20.0"/>
            </font>
        </Label>
    </center>
</BorderPane>
